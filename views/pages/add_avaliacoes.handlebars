<h3>Nova Avaliação</h3>
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/avaliacoes/nova" method="post">
            <label for="melhorar">Melhorar:</label>
            <input type="text" id="melhorar" name="melhorar" class="form-control" placeholder="Descreva os pontos a serem melhorados">
            <label for="manter">Manter:</label>
            <input type="text" id="manter" name="manter" class="form-control" placeholder="Descreva os pontos a serem mantidos">
            <label for="sugestoes">Sugestões:</label>
            <input type="text" id="sugestoes" name="sugestoes" class="form-control" placeholder="Dê sugestões">
            <label for="avaliaco_final">Avaliação Final:</label>
            <input type="text" id="avaliaco_final" name="avaliaco_final" class="form-control" placeholder="Dê sua avaliação final">
            <br>
            <button type="submit" class="btn btn-success">Criar Avaliação</button>
        </form>
    </div>
</div>