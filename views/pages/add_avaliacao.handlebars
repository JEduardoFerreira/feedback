{{#if avaliacao.id}}
    {{#if usuario}}
        <h3>Editar Avaliação</h3>
    {{else}}
        <h3>Visualizar Avaliação</h3>
    {{/if}}
{{else}}
    <h3>Nova Avaliação</h3>
{{/if}}
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/avaliacoes/nova" method="post">
            <input id="id" name="id" type="hidden" value="{{avaliacao.id}}" />
            <label for="melhorar">Melhorar:</label>
            <textarea type="text" id="melhorar" name="melhorar" class="form-control" placeholder="Descreva os pontos a serem melhorados" required {{status}}>{{avaliacao.melhorar}}</textarea>
            <label for="manter">Manter:</label>
            <textarea type="text" id="manter" name="manter" class="form-control" placeholder="Descreva os pontos a serem mantidos"required {{status}}>{{avaliacao.manter}}</textarea>
            <label for="sugestoes">Sugestões:</label>
            <textarea type="text" id="sugestoes" name="sugestoes" class="form-control" placeholder="Dê sugestões" required {{status}}>{{avaliacao.sugestoes}}</textarea>
            <label for="avaliaco_final">Avaliação Final:</label>
            <textarea type="text" id="avaliaco_final" name="avaliaco_final" class="form-control" placeholder="Dê sua avaliação final" required {{status}}>{{avaliacao.avaliaco_final}}</textarea>
            <br>
            {{#if avaliacao.id}}

            {{else}}
                <button type="submit" class="btn btn-success">Criar Avaliação</button>
            {{/if}}
        </form>
    </div>
</div>