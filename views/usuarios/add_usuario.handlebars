<header class="pb-1 mb-4 border-bottom">
{{#if usuario}}
    <span class="fs-2 fw-5">Editar Usuário</span>
    <a id="voltar-usu" class="btn btn-outline-danger mt-3 btn-sm" href="/" role="button">Voltar</a>
{{else}}
    <span class="fs-2 fw-5">Cadastre-se!</span>
    <a id="voltar-usu" class="btn btn-outline-danger mt-3 btn-sm" href="/login/" role="button">Voltar</a>
{{/if}}
</header>
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card card-form">
    <div class="card-body">
        <form action="/usuarios/novo" method="post">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome do usuário" required/>
            <label for="nome">Email:</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="E-mail do usuário" required/>
            <label for="senha">Senha:</label>
            <input type="password" id="senha" name="senha" class="form-control" placeholder="Senha do usuário" required/>
            <label for="senha2">Confirme a Senha:</label>
            <input type="password" id="senha2" name="senha2" class="form-control" placeholder="Senha do usuário" required/>
            <br>
            {{#unless avaliacao.id}}
                <button type="submit" class="btn btn-success">Cadastrar</button>
            {{/unless}}
        </form>
    </div>
</div>